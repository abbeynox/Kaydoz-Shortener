<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
	  <meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
		<link
			rel="stylesheet"
			href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
		/>
		<title>Kaydoz URL Shortner</title>
	</head>
	<body>
		<div class="container">
			<h1>Kaydoz URL Shortener</h1>
			<form action="/short" method="POST" class="row my-4">

        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon3">https://kaydoz.de/</span>
          <input 
          required
          type="text" 
          class="form-control" 
          name="keyUrl"
          id="keyUrl" 
          aria-describedby="basic-addon3"
          placeholder="Endung"
          />
        </div>

        <div class="mb-3">
          <label for="fullUrl" class="sr-only">URL zum Kürzen</label>
          <input
            required
            placeholder="URL"
            type="url"
            name="fullUrl"
            id="fullUrl"
            class="form-control col mr-2"
          />
        </div>
				<button class="btn btn-success" type="submit">URL Kürzen</button>
			</form>


			<table class="table table-hover">
				<thead>
					<tr>
						<th>Original URL</th>
						<th>Gekürzte URL</th>
						<th>Clicks</th>
            <th>Löschen</th>
					</tr>
				</thead>
				<tbody>
					<% shortUrls.forEach(shortUrl => { %>
					<tr>
						<td><a href="<%= shortUrl.full %>" target="_blank"><%= shortUrl.full %></a></td>
						<td><a href="<%= shortUrl.short %>" target="_blank"><%= shortUrl.short %></a></td>
						<td><%= shortUrl.clicks %></td>
            <td><button type="button" class="btn btn-outline-danger">Löschen</i></button></td>
					</tr>
					<% }) %>
				</tbody>
			</table>

        
      </div>      
		</div>
	</body>
</html>
